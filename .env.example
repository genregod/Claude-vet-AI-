# ── Valor Assist — Environment Variables ─────────────────────────────
# Copy this file to .env and fill in your keys.

# ── Anthropic (required) ─────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# Claude model override (default: claude-3-5-sonnet-latest)
# CLAUDE_MODEL=claude-3-5-sonnet-latest

# ── Embeddings ───────────────────────────────────────────────────────
# Provider: "huggingface" (free, local) or "voyageai" (legal-optimized)
EMBEDDING_PROVIDER=huggingface

# Voyage AI key (only needed if EMBEDDING_PROVIDER=voyageai)
VOYAGE_API_KEY=

# ── Session Encryption ──────────────────────────────────────────────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, a random key is generated per process (sessions lost on restart)
# ENCRYPTION_KEY=

# ── Authentication (ID.me) ──────────────────────────────────────────
# Register at: https://developers.id.me
IDME_CLIENT_ID=
IDME_CLIENT_SECRET=
IDME_REDIRECT_URI=http://localhost:3000/auth/idme/callback

# JWT signing secret (generate a strong random string for production)
# python -c "import secrets; print(secrets.token_urlsafe(64))"
# JWT_SECRET_KEY=

# Liveness timeout (seconds of inactivity before re-auth required)
# LIVENESS_TIMEOUT_SECONDS=1800

# ── VA.gov Lighthouse API ───────────────────────────────────────────
# Register at: https://developer.va.gov
VA_API_KEY=
VA_API_CLIENT_ID=
VA_API_CLIENT_SECRET=
VA_API_REDIRECT_URI=http://localhost:3000/auth/va/callback
VA_API_SANDBOX=true

# ── Security ─────────────────────────────────────────────────────────
# Comma-separated frontend origins for CORS
# ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]
# ENABLE_HSTS=false
# RATE_LIMIT_MAX_REQUESTS=30
# RATE_LIMIT_WINDOW_SECONDS=60
# MAX_UPLOAD_SIZE_MB=10

# ── Sessions ─────────────────────────────────────────────────────────
# SESSION_TTL_SECONDS=3600
# MAX_CONVERSATION_TURNS=20

# ── Server ───────────────────────────────────────────────────────────
# HOST=0.0.0.0
# PORT=8000
